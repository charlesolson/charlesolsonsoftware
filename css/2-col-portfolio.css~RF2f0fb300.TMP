body {
    padding-top: 70px; /* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
}

.portfolio-item {
    margin-bottom: 25px;
}

footer {
    margin: 50px 0;
}

.selfie-card {
  padding-top: 10%;
  padding-bottom: 10%;
  /*padding: 10% 10% 10% 0%;*/
  max-width: 200px;
}

.introduction-text {
  font-size: x-large;
  padding-bottom: 10px;
}

.header-title {
  padding-top:0%;
}

.img-project {
  border: 1px solid #878787;
}

.img-about {
  border-radius: 3px;
  max-width: 100%;
  height: auto;
  }

.column {
  max-width: 90rem;
}

.clearfix {
  overflow: auto;
}

.about-ul {
  overflow: hidden;
}

.content-body {
  margin: 2rem;
  font-size: large;
}

.fig-image {
  float: left;
  margin: 0 2rem 2rem 0;
}

.fig-image-project {
padding: 2rem;
}

.fig-contents-centered {
align-content:center;

}

.fig-image-caption {
  font-family: "DINPro", Helvetica Neue, Helvetica, Arial, sans-serif;
  letter-spacing: .08rem;
  color: #878787;
  font-size: 1.4rem;
  font-weight: 300;
  line-height: 2.1rem;
  margin-top: .5rem;
  display: block;
}

footer {
  color: gray;
}

@media only screen and (max-width: 1199px) {
  .header-title {
    padding-top: 0%;
    padding-bottom: 0%;
  }

  .page-header {
    margin: 0px
  }

  .selfie-card {
  }
}